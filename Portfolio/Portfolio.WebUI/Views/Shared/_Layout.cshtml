<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Portfolio of Andrew Godfroy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Andrew Godfroy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @{
                        var user = Auth.User;
                        if (user == null)
                        {
                            <li><a href="@Url.RouteUrl("Login")">Login</a></li>
                        }
                        else
                        {
                            <li class="dropdown navUserDropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <img src="@Portfolio.Services.GravitarService.GetAvatar(user.Email, 50)" />
                                    <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a href="#">Admin Panel</a></li>
                                    }

                                    <li>
                                        <a href="@Url.RouteUrl("AccountSettings")">
                                            <i class="glyphicon glyphicon-cog"></i>

                                            Account Settings
                                        </a>
                                    </li>

                                    <li role="separator" class="divider"></li>
                                    <li><a href="@Url.RouteUrl("Logout")">Logout</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="social">
            <div class="row">
                <div class="text-center">
                    <a href="https://ca.linkedin.com/in/andrewgodfroy"><img src="~/Images/Social/LinkedIn.png" /></a>
                    <a href="https://github.com/killerrin"><img src="~/Images/Social/GitHub.png" /></a>
                    <a href="https://twitter.com/killerrin"><img src="~/Images/Social/Twitter.png" /></a>
                </div>
            </div>
            <hr />
            <div class="row">
                <p class="text-center">&copy; @DateTime.Now.Year - Andrew Godfroy</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
